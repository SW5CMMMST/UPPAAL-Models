clock x;
clock transmit_time;
int k = 1;                     //Timeslot
bool Connected = false;

// Local copies of globals
int local_n = 2;                // Number of devices connected
int local_i = 1;               // Current time slot in the frame

void increment_Slot(){
    local_i = (local_i % local_n)+1;
}

void receive()
{
    local_i = i;
    local_n = n;
}

void join_Network(){
    k=n;
    i = 1;
    local_i = 1;
    n = n+1;
    local_n = local_n+1;
    Connected = true;
    Connected_Counter++;
}

void create_Network(){
    i = 0;
    n = 2;
    k = 1;
    local_i = 0;
    local_n = 2;
    Connected_Counter = 1;
    Connected = true;
    x:=0;
}

void make_Payload(){
    i = local_i;
    n = local_n;
}




