clock x;
clock transmit_time;
int k = 1;                     //Timeslot
bool Connected = false;
int Min_Units_For_Join = 0;
bool bool_emptySubSlotA = false;
bool bool_emptySubSlotB = false;
bool bool_emptySubSlotC = false;


// Local copies of globals
int local_n = 2;                // Number of devices connected
int local_i = 1;               // Current time slot in the frame

void increment_Slot(){
    local_i = (local_i % local_n)+1;
}

void receive()
{
    local_i = i;
    local_n = n;
}
void attempt_Join_Network(){
    if(bool_emptySubSlotA &amp;&amp; emptySubSlotA== 1){
    i = local_i;
    joining_ID = id;
    }
    if(bool_emptySubSlotB &amp;&amp; emptySubSlotB== 1){
    i = local_i;
    joining_ID = id;
    }
    if(bool_emptySubSlotC &amp;&amp; emptySubSlotC== 1){
    i = local_i;
    joining_ID = id;
    }
}

void join_Network(){
    k=n;
    n = n+1;
    i = local_i;
    local_n = local_n+1;
    Connected = true;
    Connected_Counter++;
    joining_ID = -1;
}

void calc_Min_Validate(){
    Min_Units_For_Join = (local_n-1)/2;
}

void create_Network(){
    i = 0;
    n = 2;
    k = 1;
    local_i = 0;
    local_n = 2;
    Connected_Counter = 1;
    Connected = true;
    x:=0;
    Transmitters++;
}

void make_Payload(){
    i = local_i;
    n = local_n;
}

void ResetJoins(){
    emptySubSlotA = 0;
    emptySubSlotB = 0;
    emptySubSlotC = 0;
    bool_emptySubSlotA = false;
    bool_emptySubSlotB = false;
    bool_emptySubSlotC = false;
}




