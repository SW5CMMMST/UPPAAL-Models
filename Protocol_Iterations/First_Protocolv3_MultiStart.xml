    if(bool_emptySubSlotC &amp;&amp; emptySubSlotC== 1){
    i = local_i;
    joining_ID = id;
    }
}

void join_Network(){
    k=n;
    n = n+1;
    i = local_i;
    local_n = local_n+1;
    Connected = true;
    joining_ID = -1;
    Connected_Counter++;
}

void calc_Min_Validate(){
    if(local_n == 2) {
        Min_Units_For_Join = 1;
    } else {
        Min_Units_For_Join = (local_n-1)/2;
    }
}

